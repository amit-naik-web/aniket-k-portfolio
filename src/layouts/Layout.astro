---
export interface Props {
	title: string;
	description?: string;
}

import Navbar from "../components/Navbar.astro";
const { title, description = "Welcome to our Astro website" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="font-['Inter'] w-full flex justify-center items-center flex-col">
		<main class="w-[95%] flex justify-center items-center">
			<Navbar />
			<slot />
		</main>

		<footer>
			<div class="bg-[#ddd] w-full h-16 flex justify-center items-center">footer</div>
		</footer>
	</body>
</html>

<style>
	@import "../styles/global.css";
</style>

