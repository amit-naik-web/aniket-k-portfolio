---
// Navbar component with mobile responsiveness
---
<nav class="fixed w-full h-[4rem] z-20 top-0">
  <div class="w-full h-full flex flex-row">
    <div class="w-full shrink-0 h-full flex flex-col">

      <div class="h-full w-full flex justify-between items-center pt-6 px-6">
        <div class="flex-1 h-full flex flex-col">
          <span
            class="text-gray-300 text-[0.75rem] hover:text-gray-100 cursor-pointer"
            >Works</span
          >
        </div>
        <div class="flex-1 h-full flex flex-col">
          <span
            class="text-gray-300 text-[0.75rem] hover:text-gray-100 cursor-pointer"
            >Contact</span
          >
        </div>
        <div class="flex-1 h-full flex justify-center items-center">
          <h1 id="navbar-title" class="flex text-center h-full w-full items-start justify-center text-[#fff] text-4xl font-bold tracking-wider transition-transform duration-300">
            01byte10
          </h1>
        </div>

        <div class="flex-1 h-full flex flex-col text-end">
          <span
            class="text-gray-300 text-[0.75rem] hover:text-gray-100 cursor-pointer"
            >About</span
          >
        </div>
        <div class="flex-1 h-full flex flex-col text-end">
          <span
            class="text-gray-300 text-[0.75rem] hover:text-gray-100 cursor-pointer"
            >Services</span
          >
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.2s ease-out;
  }
</style>

<script>
  const title = document.getElementById('navbar-title');
  
  function handleScroll() {
    const scrollPosition = window.scrollY;
    // Scale from 1 to 0.6 over the first 300px of scroll
    const maxScroll = 300;
    const minScale = 1;
    const scale = Math.max(minScale, 1.2 - (scrollPosition / maxScroll) * (1.2 - minScale));
    
    if (title) {
      title.style.transform = `scale(${scale})`;
    }
  }
  
  window.addEventListener('scroll', handleScroll);
  
  // Initialize on load
  handleScroll();
</script>
