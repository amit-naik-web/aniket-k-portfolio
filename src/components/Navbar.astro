<nav class="fixed w-[100%] h-[7rem] z-20 top-0 start-0 flex flex-direction-row">
  <div class="flex flex-direction-col">
    <div class="h-full w-full flex flex-direction-col items-end bg-white">
      <div class="flex flex-direction-row">
        <div class="h-full w-1/5 bg-[#fff]">Logo</div>
        <div class="w-[50px] h-[50px] rotate-180">
          <svg viewBox="0 0 100 100" class="w-full h-full">
            <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#dbeaff"></path>
          </svg>
        </div>
      </div>
      <div class="h-full w-full flex items-start">
        <div class="w-[50px] h-[50px] rotate-0">
          <svg viewBox="0 0 100 100" class="w-full h-full">
            <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#fff"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="h-full flex items-start">
      <div class="w-[50px] h-[50px] rotate-0">
        <svg viewBox="0 0 100 100" class="w-full h-full">
          <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#fff"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="h-full flex-1 bg-[#d5d5d5]">NavBar</div>
</nav>

