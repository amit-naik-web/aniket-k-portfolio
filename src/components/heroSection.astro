---
// Hero Section component
---

<section class="flex justify-center items-center w-full pb-3 flex-col">
  <div
    class="flex justify-center items-center relative w-full min-h-full h-screen rounded-[50px] rounded-tr-[50px]"
  >
    <div class="absolute bottom-0 left-0 z-10 w-full">
      <div class="w-[50px] h-[50px] -rotate-90">
        <svg viewBox="0 0 100 100" class="w-full h-full">
          <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#000"></path>
        </svg>
      </div>
      <div class="flex w-full">
        <div class="flex flex-row items-end">
          <div
            class="p-4 text-right w-[38rem] h-[12rem] bg-[#000] rounded-tr-[50px]"
          >
            <h1 class="text-7xl font-extrabold text-gray-800">Catch Phrase</h1>
            <h2 class="text-4xl font-bold text-gray-600">Loreum Ipsum</h2>
          </div>

          <div class="w-[50px] h-[50px] -rotate-90">
            <svg viewBox="0 0 100 100" class="w-full h-full">
              <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#000"></path>
            </svg>
          </div>
        </div>
      </div>
      <div class="w-full h-3 bg-black"></div>
    </div>
    <!-- <div class="video-container"> -->
    <div class="relative w-full h-full aspect-video overflow-hidden bg-white">
      <div class="z-10 w-[50px] h-[50px] rotate-90 absolute top-3 right-0">
        <svg viewBox="0 0 100 100" class="w-full h-full">
          <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#000"></path>
        </svg>
      </div>
      <div class="z-10 w-[50px] h-[50px] rotate-180 absolute bottom-3 right-0">
        <svg viewBox="0 0 100 100" class="w-full h-full">
          <path d="m100,0H0v100C0,44.77,44.77,0,100,0Z" fill="#000"></path>
        </svg>
      </div>
      <video
        width="100%"
        height="100%"
        class="absolute top-0 left-0 w-full h-full object-cover"
        poster="/main-banner-image.jpg"
        autoplay
        muted
        loop
        playsinline
      >
        <source
          src="mazak zaden x aunv jain.m4v"
          type="video/mp4"
        />

        Your browser does not support the video tag.
      </video>
    </div>

    <div
      class="z-10 w-[25%] border-l-2 border-black h-full bg-transparent flex flex-col space-between pt-3 pb-3 px-3 gap-3"
    >
      <div
        class="flex flex-col justify-start items-center h-full w-full relative py-4"
      >
             <!-- First Image -->
             <div class="relative w-60 h-60 cursor-pointer hover:scale-110 transition-all duration-300 z-10">
                 <img 
                     src="/coldplay-circle.png" 
                     alt="Coldplay" 
                     class="w-full h-full rounded-full object-cover shadow-xl"
                 />
                 <div class="absolute inset-0 bg-black/30 rounded-full"></div>
             </div>
             <!-- Second Image - Overlapping -->
             <div class="relative w-60 h-60 cursor-pointer hover:scale-110 transition-all duration-300 -mt-16 z-9">
                 <img 
                     src="/superdry-square - pune 2-22.jpg" 
                     alt="Superdry" 
                     class="w-full h-full rounded-full object-cover shadow-xl"
                 />
                 <div class="absolute inset-0 bg-black/30 rounded-full"></div>
             </div>
             <!-- Third Image - Overlapping -->
             <div class="relative w-60 h-60 cursor-pointer hover:scale-110 transition-all duration-300 -mt-16 z-8">
                 <img 
                     src="/BenBohmer.jpg" 
                     alt="Ben Bohmer" 
                     class="w-full h-full rounded-full object-cover shadow-xl"
                 />
                 <div class="absolute inset-0 bg-black/30 rounded-full"></div>
             </div>
             <!-- Fourth Image - Overlapping -->
             <div class="relative w-60 h-60 cursor-pointer hover:scale-110 transition-all duration-300 -mt-16 z-7">
                 <img 
                     src="/Fisher.jpg" 
                     alt="Fisher" 
                     class="w-full h-full rounded-full object-cover shadow-xl"
                 />
                 <div class="absolute inset-0 bg-black/30 rounded-full"></div>
             </div>
             <!-- Fifth Image - Overlapping -->
             <div class="relative w-60 h-60 cursor-pointer hover:scale-110 transition-all duration-300 -mt-16 z-6">
                 <img 
                     src="/Clients/anjunadeep.png" 
                     alt="Anjunadeep" 
                     class="w-full h-full rounded-full object-cover shadow-xl"
                 />
                 <div class="absolute inset-0 bg-black/30 rounded-full"></div>
             </div>
             </div>
      </div>
    </div>
    <!-- Overlay -->
    <div
      class="absolute inset-0 flex items-center justify-center bg-black/10 text-white text-center px-4"
    >
      <h1 class="text-3xl font-bold text-white">Welcome to Our Demo</h1>
    </div>
  </div>
</section>
