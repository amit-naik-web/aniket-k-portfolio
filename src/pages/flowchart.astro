    <script>
        // @ts-nocheck - This is client-side JavaScript in an Astro file
        // Initialize Mermaid
        mermaid.initialize({
            startOnLoad: true,
            theme: 'default',
            flowchart: {
                useMaxWidth: true,
                htmlLabels: true,
                curve: 'basis'
            },
            themeVariables: {
                primaryColor: '#4A90E2',
                primaryTextColor: '#FFFFFF',
                primaryBorderColor: '#2E5C8A',
                lineColor: '#4A90E2',
                secondaryColor: '#7ED321',
                tertiaryColor: '#F5A623'
            }
        });

        // Flowchart definition
        const flowchartDefinition = `
        flowchart TB
            %% Start and End
            Start([ğŸš€ START PROCESS]) 
            Finish([âœ… PROCESS COMPLETE])
            
            %% Main States
            Init["ğŸ”§ INITIALIZATION STATE<br/>â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”<br/>ğŸ“ Load CSV File<br/>ğŸ”— Initialize Tracker API<br/>âš™ï¸ Read Configuration<br/>ğŸ“Š Setup Variables"]
            
            GetFilteredRows["ğŸ“‹ GET FILTERED CSV ROWS STATE<br/>â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”<br/>ğŸ” Get Next CSV Row to Process<br/>ğŸ¯ Apply Row-Level Filters<br/>ğŸ“Œ Set Current CSV Row<br/>â­ï¸ Skip Invalid Rows"]
            
            GetTrans["ğŸ“¡ GET TRANSACTION DATA STATE<br/>â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”<br/>ğŸ“ Call Tracker GET API<br/>ğŸ“‹ Use Current CSV Row Data<br/>ğŸ”„ Check API Response<br/>ğŸ“¦ Create Transaction Item"]
            
            ProcessTx["âš™ï¸ PROCESS TRANSACTION STATE<br/>â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”<br/>ğŸ”„ Process Tracker Record<br/>ğŸ“Š Use CSV Row Context<br/>âœ… Handle Success/Failure<br/>ğŸ“ Update Status"]
            
            EndProcess["ğŸ END PROCESS STATE<br/>â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”<br/>ğŸ“‹ Generate Reports<br/>ğŸ“Š Log Statistics<br/>ğŸ”’ Close Applications<br/>ğŸ“§ Send Notifications"]
            
            %% Decision Points
            InitCheck{"â“ Initialization<br/>Successful?"}
            CSVRowCheck{"â“ CSV Row<br/>Available?"}
            APICheck{"â“ API Returns<br/>Data?"}
            ProcessResult{"â“ Processing<br/>Result?"}
            RetryCheck{"â“ Retry<br/>Available?"}
            
            %% Actions
            CreateTx["ğŸ“¦ CREATE TRANSACTION<br/>â€¢ CSV Row Data<br/>â€¢ API Response Data<br/>â€¢ Transaction Context"]
            
            %% Flow Connections
            Start --> Init
            Init --> InitCheck
            InitCheck -->|"âœ… SUCCESS"| GetFilteredRows
            InitCheck -->|"âŒ FAILED"| EndProcess
            
            GetFilteredRows --> CSVRowCheck
            CSVRowCheck -->|"ğŸ“‹ ROW FOUND"| GetTrans
            CSVRowCheck -->|"ğŸš« NO MORE ROWS"| EndProcess
            
            GetTrans --> APICheck
            APICheck -->|"âœ… RECORD FOUND"| CreateTx
            APICheck -->|"ğŸš« NO RECORD"| GetFilteredRows
            
            CreateTx --> ProcessTx
            ProcessTx --> ProcessResult
            ProcessResult -->|"âœ… SUCCESS"| GetTrans
            ProcessResult -->|"âš ï¸ BUSINESS EXCEPTION"| GetTrans
            ProcessResult -->|"âŒ SYSTEM EXCEPTION"| RetryCheck
            
            RetryCheck -->|"ğŸ”„ RETRY"| ProcessTx
            RetryCheck -->|"ğŸ›‘ MAX RETRIES"| GetTrans
            
            EndProcess --> Finish
            
            %% Enhanced Styling
            classDef stateMain fill:#4A90E2,stroke:#2E5C8A,stroke-width:3px,color:#FFFFFF,font-weight:bold
            classDef stateEnd fill:#7ED321,stroke:#5BA818,stroke-width:3px,color:#FFFFFF,font-weight:bold
            classDef decision fill:#F5A623,stroke:#C7851B,stroke-width:2px,color:#FFFFFF,font-weight:bold
            classDef action fill:#50E3C2,stroke:#3AAAA0,stroke-width:2px,color:#FFFFFF,font-weight:bold
            classDef startFinish fill:#BD10E0,stroke:#8B0CA6,stroke-width:3px,color:#FFFFFF,font-weight:bold
            classDef successFlow stroke:#7ED321,stroke-width:3px
            classDef errorFlow stroke:#D0021B,stroke-width:3px
            classDef retryFlow stroke:#F5A623,stroke-width:2px
            
            %% Apply Styles
            class Init,GetFilteredRows,GetTrans,ProcessTx stateMain
            class EndProcess stateEnd
            class InitCheck,CSVRowCheck,APICheck,ProcessResult,RetryCheck decision
            class CreateTx action
            class Start,Finish startFinish
            
            %% Link Styles
            linkStyle 0 stroke:#4A90E2,stroke-width:3px
            linkStyle 1 stroke:#4A90E2,stroke-width:3px
            linkStyle 2 stroke:#7ED321,stroke-width:3px
            linkStyle 3 stroke:#D0021B,stroke-width:3px
            linkStyle 4 stroke:#4A90E2,stroke-width:3px
            linkStyle 5 stroke:#7ED321,stroke-width:3px
            linkStyle 6 stroke:#D0021B,stroke-width:3px
            linkStyle 7 stroke:#4A90E2,stroke-width:3px
            linkStyle 8 stroke:#7ED321,stroke-width:3px
            linkStyle 9 stroke:#D0021B,stroke-width:3px
            linkStyle 10 stroke:#50E3C2,stroke-width:3px
            linkStyle 11 stroke:#4A90E2,stroke-width:3px
            linkStyle 12 stroke:#7ED321,stroke-width:3px
            linkStyle 13 stroke:#F5A623,stroke-width:2px
            linkStyle 14 stroke:#D0021B,stroke-width:3px
            linkStyle 15 stroke:#F5A623,stroke-width:2px
            linkStyle 16 stroke:#D0021B,stroke-width:2px
            linkStyle 17 stroke:#7ED321,stroke-width:3px
        `;

        // Render the flowchart
        document.addEventListener('DOMContentLoaded', function() {
            const element = document.querySelector("#flowchart");
            if (element) {
                element.innerHTML = '';
                
                mermaid.render('flowchart-svg', flowchartDefinition).then(({svg}) => {
                    if (element) {
                        element.innerHTML = svg;
                    }
                }).catch(error => {
                    if (element) {
                        element.innerHTML = '<div style="color: red; padding: 2rem;">Error rendering flowchart: ' + error.message + '</div>';
                    }
                });
            }
        });

        // Control functions
        function resetZoom() {
            const svg = document.querySelector('#flowchart svg');
            if (svg) {
                svg.style.transform = 'scale(1)';
                svg.style.transformOrigin = 'center';
            }
        }

        function downloadSVG() {
            const svg = document.querySelector('#flowchart svg');
            if (svg) {
                const svgData = new XMLSerializer().serializeToString(svg);
                const svgBlob = new Blob([svgData], {type: 'image/svg+xml;charset=utf-8'});
                const svgUrl = URL.createObjectURL(svgBlob);
                const downloadLink = document.createElement('a');
                downloadLink.href = svgUrl;
                downloadLink.download = 'process-flowchart.svg';
                document.body.appendChild(downloadLink);
                downloadLink.click();
                document.body.removeChild(downloadLink);
            }
        }

        function toggleTheme() {
            const container = document.querySelector('.flowchart-container');
            const wrapper = document.querySelector('.flowchart-wrapper');
            
            if (container && wrapper) {
                if (container.classList.contains('dark-theme')) {
                    container.classList.remove('dark-theme');
                    wrapper.style.background = 'rgba(255, 255, 255, 0.95)';
                } else {
                    container.classList.add('dark-theme');
                    wrapper.style.background = 'rgba(30, 30, 30, 0.95)';
                }
            }
        }

        // Add zoom functionality
        document.addEventListener('DOMContentLoaded', function() {
            const svg = document.querySelector('#flowchart svg');
            if (svg) {
                let scale = 1;
                let isScaling = false;
                let startY = 0;

                svg.addEventListener('wheel', function(e) {
                    e.preventDefault();
                    const delta = e.deltaY > 0 ? 0.9 : 1.1;
                    scale *= delta;
                    scale = Math.max(0.5, Math.min(3, scale));
                    svg.style.transform = `scale(${scale})`;
                });

                svg.addEventListener('mousedown', function(e) {
                    if (e.button === 0) {
                        isScaling = true;
                        startY = e.clientY;
                    }
                });

                document.addEventListener('mousemove', function(e) {
                    if (isScaling) {
                        const deltaY = e.clientY - startY;
                        const delta = deltaY > 0 ? 0.99 : 1.01;
                        scale *= delta;
                        scale = Math.max(0.5, Math.min(3, scale));
                        svg.style.transform = `scale(${scale})`;
                        startY = e.clientY;
                    }
                });

                document.addEventListener('mouseup', function() {
                    isScaling = false;
                });
            }
        });
    </script>
